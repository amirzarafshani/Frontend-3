{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ES2015",
    "target": "ES5",
    "jsx": "react-jsx",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@routes/*": ["src/routes/"],
      "@assets/*": ["src/assets/"],
    },
  },
  "exclude": [
    "node_modules",
    "dist",
  ],
  "include": ["src", "index.d.ts"]
}